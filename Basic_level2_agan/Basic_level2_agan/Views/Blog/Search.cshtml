@model IEnumerable<Basic_level2_agan.Models.Blog>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style>
        body {
            padding: 0px;
            margin: 0px;
        }
        .header {
            padding: 0px;
            margin: 0px;
            width: 100%;
            background: black;
            height: 50px;
        }
        .main {
            padding: 0px;
            margin-right: 10px;
        }
        .content {
            margin: 0px;
            background: #696969;
        }
        .card {
            background: white;
            
        }
        .card-header {
            background: #CCCCCC;
        }
        .card-body
        {
            background:white;
        }
        .btn-primary:hover{
            background:white;
            color:blue;
        }
        .form-control{
              max-width:100%;
        }
        .bit
        {
            margin-left:40%;
        }
    </style>
</head>
<body>
    <div>
        <div class="header row col-md-12" >
            @Html.Partial("Header")
        </div>
        <div class="main row col-md-12" >
            <div class="menu col-md-2">
                @Html.Partial("Menu")
            </div>
            <div class="content col-md-10">
                <div class="card" >

                    <div class="card-header" >
                        <h2>Search Blog</h2>
                    </div>                  
                        <div class="card-body">
                            <div class="row">


                                <div class="col-md-12">
                                    @using (Html.BeginForm())
                            {
                                    <p>
                                        Title:@Html.TextBox("searchString",null, new { @class="form-control" })
                                        <div class="bit col-md-1">

                                            <input class="btn btn-primary" type="submit" value="Search" style="color:green;" />
                                            <div class="row"></div>
                                        </div>

                                    </p>

                            }
                                </div>


                            </div>
                        </div>                 
                </div>
                <div>
                    @Html.Partial("ListBlogs")
                </div>

            </div>

        </div>
        <div class="col-md-12" style="padding:0px;">
            @Html.Partial("Footer")
        </div>
    </div>

</body>
</html>
